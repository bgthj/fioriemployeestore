<mvc:View controllerName="employeestore.controller.Main"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">
        
	

	<content>

		<List id="_IDGenList1"
		headerText="Products"
		items="{/Products}" >
		<ObjectListItem id="_IDGenStandardListItem1"
		    class="customListItem"
			title="{product_name}"
			icon="{image}"
			iconDensityAware="true"
			type="Active" 
            number="{
				parts:[{path:'price'},{path:'CurrencyCode'}],
				type: 'sap.ui.model.type.Currency',
				formatOptions: {showMeasure: true}
			}"
			numberUnit="USD"
            >

            <firstStatus>
			<ObjectStatus id="_IDGenObjectStatus1"
					text="{Status}"
					state="{
						path: 'Status',
						formatter: 'sap.m.sample.ObjectListItem.Formatter.status'
					}" />
			</firstStatus>
			<ObjectAttribute id="_IDGenObjectAttribute1" text="{path: 'number_available', formatter: '.formatter.formatAvailability'}" />
           
            </ObjectListItem>
		</List>





	</content>
    </Page>
</mvc:View>
